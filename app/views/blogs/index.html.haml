%table.table.table-striped
  %thead
    %tr
      %th
        %i.icon-tags
        %span.recent-post-tag Recent Posts
  - @blogs.each do |blog|
    %tr
      %td.blog_title
        = link_to blog.title, blog_url(blog)
      %td
        = blog.created_at.mon
        \/
        = blog.created_at.day
        \/
        = blog.created_at.year
        %br
      - if can? :manage, :all
        %td= link_to 'Edit', edit_blog_path(blog),
          :class => "btn btn-mini"
        %td= link_to 'Destroy', blog, :method => :delete,
          :confirm => "Remove?",
          :class => "btn btn-mini btn-danger"

%br

- if can? :manage, :all
  = link_to 'New Blog', new_blog_path,
    :class => "btn btn-primary"
