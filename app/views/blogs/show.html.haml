- if can? :manage, :all
  = link_to 'Edit', edit_blog_path(@blog),
    :class => "btn btn-mini"
  = link_to 'Destroy', blog_path(@blog), :method => :delete,
    :class => "btn btn-mini", :confirm => "Delete this blog ?"
%h3
  = @blog.title
  %span.label
    = @blog.readers.size
    %i.icon-eye-open
    = @blog.comments.size
    %i.icon-comment

.blog-content
  = @blog.content.html_safe
.comments
  %table.table.table-striped
    %thead
      %tr
        %h3
          Total comments
          %span.total-comments= @blog.comments.size
    %tbody
      = render :partial => "comment", :collection => @blog.comments
%h3 Comment:
.new-comment
  = render "comment_form"
= link_to 'Back', blogs_path, :class => "btn btn-mini"
